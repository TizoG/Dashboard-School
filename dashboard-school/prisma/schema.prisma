generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




model Asignatura{
  id Int @id @default(autoincrement()) 
  usuario_id String
  nombre String 
  descripcion String? @db.Text
  fechaCreacion DateTime @default(now())
  profesor String 
  color String @default("#A78BFA")
  creditos Int
  clasificacion Int
  semestre String

  temario Temario[]
  archivo Archivos[]
  

}

model Temario{
  id Int @id @default(autoincrement())
  asignatura_id Int
  asignatura Asignatura @relation(fields: [asignatura_id], references: [id], onDelete: Cascade)
  titulo String
  contenido String? @db.Text
  enlace String?

  notasExamenes NotasExamenes[]
  
}

model NotasExamenes{
  id Int @id @default(autoincrement())
  titulo String
  nota Float? 
  contenido String? @db.Text
  fechaCreacion DateTime @default(now())
  fechaVencimiento DateTime
  tipo String?

  tema_id Int
  tema Temario @relation(fields: [tema_id], references: [id], onDelete: Cascade)

  archivoUrl String? @db.Text
  
}


enum TipoNota{
  RAPIDA
  MONS
}
model NotasRapidas{
  id Int @id @default(autoincrement())
  tipo TipoNota
  titulo String
  contenido String @db.Text
  fechaCreacion DateTime @default(now())

}

enum Estado{
  PENDIENTE
  COMPLETADA
  EN_PROCESO
}

enum Prioridad{
  BAJA
  MEDIA
  ALTA
}
model Tareas{
  id Int @id @default(autoincrement())
  titulo String 
  descripcion String? @db.Text
  asignatura String
  tipo String
  estado Estado
  prioridad Prioridad
  fechaCreacion DateTime @default(now())
  fechaVencimiento DateTime 
  
}

model Evento{
  id Int @id @default(autoincrement())
  titulo String
  descripcion String? @db.Text
  fechaInicio DateTime 
  fechaFin DateTime 
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}



enum TipoMime {
  PDF
  PNG
  TXT
  JPG
  DOC 
  DOCX
  GIF
  JPEG
}

model Archivos{
  id Int @id @default(autoincrement())
  usuario_id String
  nombre String
  tipoMime TipoMime
  url String @db.Text
  fechaSubida DateTime @default(now())

  asignatura_id Int
  asignatura Asignatura @relation(fields: [asignatura_id], references: [id])
}