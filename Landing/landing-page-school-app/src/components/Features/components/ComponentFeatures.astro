---
const { icon: Icon, title, description } = Astro.props;
---

<div class="flex hover:bg-gray-100/50 p-6 rounded-2xl gap-6">
    <div
        class="bg-blue-100 h-12 w-12 rounded-2xl flex items-center justify-center flex-shrink-0"
    >
        {Icon && <Icon class="w-6 h-6 text-blue-600" />}
    </div>
    <div class="flex flex-col">
        <h3 class="font-display text-lg text-gray-900 mb-2 text-start">
            {title}
        </h3>
        <p class="text-gray-600 font-display text-start">
            {description}
        </p>
    </div>
</div>
