---
const { star = 5, name, description, estudios, avatar } = Astro.props;
import { Star } from '@lucide/astro';
---

<div class="flex flex-col gap-4 bg-white p-6 rounded-2xl shadow-2xl">
    <div class="flex">
        {
            Array.from({ length: star }).map((_, index) => (
                <Star class="w-5 h-5 text-amber-400 fill-amber-400" />
            ))
        }
    </div>
    <p class="text-gray-600 font-display italic">{description}</p>
    <div class="flex gap-4">
        <div>
            {
                avatar && (
                    <img
                        src={avatar}
                        alt={name}
                        class="w-12 h-12 rounded-full bg-blue-100"
                    />
                )
            }
        </div>
        <div>
            <h3 class="text-gray-900">{name}</h3>
            <p class="text-gray-500 text-sm">{estudios}</p>
        </div>
    </div>
</div>
